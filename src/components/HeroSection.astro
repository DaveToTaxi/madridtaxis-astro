<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    margin-top: 60px;
  }
  
  /* SPLASH PANTALLA COMPLETA - CUBRE TODO INCLUSO HEADER */
  .splash-overlay-fullscreen {
    position: fixed;           /* FIXED = pantalla completa real */
    top: 0;
    left: 0;
    width: 100vw;             /* 100% del viewport */
    height: 100vh;            /* 100% de la altura */
    background: #000;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 99999;           /* Por encima de TODO (header incluido) */
    animation: splashFadeOut 1.2s ease forwards;
    animation-delay: 1.4s;
    pointer-events: none;     /* No interfiere con SEO */
  }
  
  .splash-content {
    text-align: center;
    animation: splashFadeInUp 0.8s ease-out;
  }
  
  .splash-logo {
    animation: splashPulseGlow 2s ease-in-out infinite;
  }
  
  .splash-logo-img {
    width: 120px;             /* TamaÃ±o del logo */
    height: 120px;
    margin-bottom: 2rem;
    filter: brightness(1.2) drop-shadow(0 0 20px rgba(255,255,255,0.3));
    transition: all 0.3s ease;
  }
  
  .splash-title {
    font-size: 3.5rem;        /* MÃ¡s grande para pantalla completa */
    letter-spacing: 0.15em;
    margin-bottom: 1.5rem;
    font-weight: 700;
    font-family: 'Inter', sans-serif;
    background: linear-gradient(135deg, #ffffff, #e2e8f0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .splash-subtitle {
    font-size: 1.3rem;        /* MÃ¡s grande para pantalla completa */
    font-weight: 300;
    letter-spacing: 0.1em;
    font-family: 'Inter', sans-serif;
    color: rgba(255, 255, 255, 0.9);
  }
  
  @keyframes splashFadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
  
  @keyframes splashFadeOut {
    0% {
      opacity: 1;
      transform: scale(1);
    }
    70% {
      opacity: 1;
      transform: scale(1.02);
    }
    100% {
      opacity: 0;
      transform: scale(1.05);
      visibility: hidden;
    }
  }
  
  @keyframes splashPulseGlow {
    0%, 100% {
      filter: brightness(1.2) drop-shadow(0 0 20px rgba(255,255,255,0.3));
    }
    50% {
      filter: brightness(1.4) drop-shadow(0 0 30px rgba(255,255,255,0.6));
    }
  }
  
  /* CONTENIDO PRINCIPAL - SEO optimizado */
  .hero-content {
    opacity: 1;               /* SIEMPRE visible para SEO */
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    min-height: 600px;
    color: white;
    
    /* AnimaciÃ³n visual suave despuÃ©s del splash */
    animation: heroContentShow 1s ease forwards;
    animation-delay: 2.2s;
    transform: translateY(20px);
  }
  
  @keyframes heroContentShow {
    to {
      transform: translateY(0);
    }
  }
  
  /* ACCESIBILIDAD - Respeta preferencias del usuario */
  @media (prefers-reduced-motion: reduce) {
    .splash-overlay-fullscreen {
      display: none;          /* Sin splash si el usuario prefiere sin animaciones */
    }
    
    .splash-title,
    .splash-subtitle,
    .splash-content,
    .splash-logo {
      animation: none;
    }
    
    .hero-content {
      animation: none;
      transform: none;
    }
  }
  
  /* ESTILOS ORIGINALES DEL HERO */
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2;
  }
  
  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg, 
      rgba(30, 41, 59, 0.8) 0%, 
      rgba(15, 23, 42, 0.6) 50%,
      rgba(30, 41, 59, 0.9) 100%
    );
    z-index: -1;
  }
  
  .booking-form-section {
    order: 2;
  }
  
  .booking-form {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    color: #333;
  }
  
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }
  
  .form-group {
    position: relative;
  }
  
  .form-group label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
    color: var(--text-gray);
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
  }
  
  .form-icon {
    width: 16px;
    height: 16px;
    color: var(--primary-color);
  }
  
  .form-input {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid var(--border-gray);
    border-radius: 0.5rem;
    font-size: 1rem;
    transition: border-color 0.2s;
  }
  
  .form-input:focus {
    outline: none;
    border-color: var(--primary-color);
  }
  
  .form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }
  
  .form-actions .btn {
    flex: 1;
    font-size: 0.9rem;
    padding: 1rem;
  }
  
  .hero-text {
    order: 1;
  }
  
  .hero-text h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }
  
  .hero-subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    line-height: 1.6;
  }
  
  .hero-actions {
    display: flex;
    gap: 1rem;
  }
  
  .btn-accent {
    background-color: var(--accent-color);
    color: white;
  }
  
  .btn-accent:hover {
    background-color: #2563eb;
  }
  
  .btn-whatsapp {
    background-color: #25d366;
    color: white;
  }
  
  .btn-whatsapp:hover {
    background-color: #20ba5a;
  }
  
  /* RESPONSIVE */
  @media (max-width: 1024px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }
    
    .booking-form-section {
      order: 1;
    }
    
    .hero-text {
      order: 2;
    }
    
    .hero-text h1 {
      font-size: 2.5rem;
    }
    
    .splash-logo-img {
      width: 100px;
      height: 100px;
      margin-bottom: 1.5rem;
    }
    
    .splash-title {
      font-size: 3rem;
    }
    
    .splash-subtitle {
      font-size: 1.2rem;
    }
  }
  
  @media (max-width: 768px) {
    .hero {
      margin-top: 70px;
      padding: 2rem 0;
    }
    
    .form-row {
      grid-template-columns: 1fr;
    }
    
    .form-actions {
      flex-direction: column;
    }
    
    .hero-text h1 {
      font-size: 2rem;
    }
    
    .hero-subtitle {
      font-size: 1.1rem;
    }
    
    .hero-actions {
      flex-direction: column;
    }
    
    .splash-logo-img {
      width: 80px;
      height: 80px;
      margin-bottom: 1rem;
    }
    
    .splash-title {
      font-size: 2.5rem;
    }
    
    .splash-subtitle {
      font-size: 1.1rem;
    }
  }
  
  @media (max-width: 480px) {
    .splash-logo-img {
      width: 70px;
      height: 70px;
      margin-bottom: 0.8rem;
    }
    
    .splash-title {
      font-size: 2rem;
    }
    
    .splash-subtitle {
      font-size: 1rem;
    }
  }

  /* Layout Estable con Espacio Reservado SOLO para el hero background */
  .image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #e2e8f0; /* Color gris suave */
  }
</style>
