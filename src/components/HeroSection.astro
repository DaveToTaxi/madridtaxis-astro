<style is:inline>
  /* CRITICAL CSS FOR SPLASH - MÃ¡xima prioridad */
  .splash-overlay-fullscreen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 99999;
    opacity: 1;
    transition: opacity 0.3s ease; /* TransiciÃ³n suave de opacidad */
    pointer-events: none;
    will-change: opacity;
  }
  .splash-overlay-fullscreen.hidden {
    opacity: 0;
    display: none; /* Asegura que el elemento no ocupe espacio y no bloquee el renderizado */
  }
</style>

<section class="hero">
  <!-- SPLASH PANTALLA COMPLETA - cubre header y todo -->
  <div id="splash-overlay-fullscreen" class="splash-overlay-fullscreen" aria-hidden="true">
    <div class="splash-content">
      <div class="splash-logo">
        <img 
          src="/images/logo-madridtaxis.png" 
          alt="Logo MadridTaxis - Taxi Las Rozas Aeropuerto" 
          class="splash-logo-img"
          width="120"
          height="120"
          loading="eager"
          fetchpriority="high"
          decoding="sync"
        >
        <div class="splash-subtitle">Desde Las Rozas al Aeropuerto, 24h</div>
      </div>
    </div>
  </div>
  
  <!-- Contenido principal (SIEMPRE visible para SEO) -->
  <div class="hero-background">
    <picture>
      <source
        media="(max-width: 480px)"
        srcset="/images/taxi-barajas-hero-480.webp"
        type="image/webp"
      >
      <source
        media="(max-width: 1024px)"
        srcset="/images/taxi-barajas-hero-1024.webp"
        type="image/webp"
      >
      <source
        srcset="/images/taxi-barajas-hero-1920.webp"
        type="image/webp"
      >
      <img
        src="/images/taxi-barajas-hero-1024.webp"
        alt="Taxi Madrid Aeropuerto"
        width="1920"
        height="1280"
        loading="eager"
        fetchpriority="high"
        decoding="sync"
        style="object-fit:cover;width:100%;height:100%;opacity:1;visibility:visible;display:block;"
      />
    </picture>
    <div class="hero-overlay"></div>
  </div>
  
  <div class="container">
    <div class="hero-content">
      <div class="booking-form-section">
        <div class="booking-form">
          <div class="form-row">
            <div class="form-group">
              <label>
                <svg class="form-icon" viewBox="0 0 24 24" fill="currentColor">
                  <circle cx="12" cy="12" r="3"/>
