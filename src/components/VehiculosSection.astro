<style>
  .vehiculos {
    background: var(--light-gray);
  }
  
  .vehiculos-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  
  .vehiculos-image {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }
  
  .vehiculos-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .vehiculos-image:hover img {
    transform: scale(1.05);
  }
  
  .vehiculos-info h2 {
    font-size: 2.5rem;
    color: var(--dark-bg);
    margin-bottom: 2rem;
    font-weight: 700;
  }
  
  .caracteristicas {
    margin-bottom: 2.5rem;
  }
  
  .caracteristica {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: white;
    border-radius: 0.8rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    transition: transform 0.2s ease;
  }
  
  .caracteristica:hover {
    transform: translateX(5px);
  }
  
  .caracteristica-icon {
    font-size: 1.5rem;
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--primary-color), #ef4444);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .caracteristica-text {
    flex: 1;
  }
  
  .caracteristica-text strong {
    color: var(--dark-bg);
    font-weight: 600;
    line-height: 1.5;
  }
  
  .vehiculos-action {
    display: flex;
    gap: 1rem;
  }
  
  @media (max-width: 1024px) {
    .vehiculos-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }
    
    .vehiculos-info h2 {
      font-size: 2rem;
    }
    
    .vehiculos-image img {
      height: 300px;
    }
  }
  
  @media (max-width: 768px) {
    .vehiculos-action {
      flex-direction: column;
    }
    
    .caracteristica {
      flex-direction: column;
      text-align: center;
      align-items: center;
    }
    
    .vehiculos-info h2 {
      font-size: 1.8rem;
    }
  }
</style>
